<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bVerde"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#179205"
        android:text="@string/bVerde"
        app:layout_constraintBaseline_toBaselineOf="@+id/bRojo"
        app:layout_constraintEnd_toStartOf="@+id/bRojo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bRojo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#C50505"
        android:text="@string/bRojo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bVerde"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bAmarillo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#FFFE00"
        android:text="@string/bAmarillo"
        app:layout_constraintBaseline_toBaselineOf="@+id/bAzul"
        app:layout_constraintEnd_toStartOf="@+id/bAzul"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAzul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#03FEED"
        android:text="@string/bAzul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bAmarillo"
        app:layout_constraintTop_toBottomOf="@+id/bRojo" />

    <Button
        android:id="@+id/bJugar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="161dp"
        android:text="@string/bJugar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/numeroRonda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="17dp"
        android:cursorVisible="false"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="183dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="227dp" />

</androidx.constraintlayout.widget.ConstraintLayout>